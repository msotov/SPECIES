%!PS-Adobe-2.0 
/bdef {bind def} bind def
/bfor {bind for} bdef
/ldef {load def} bdef
/cp /currentpoint ldef
/gr /grestore ldef
/gs /gsave ldef
/inch {72 mul} bdef
/m /moveto ldef
/pshow {true charpath} bdef
/r /rotate ldef
/rlt /rlineto ldef
/rmt /rmoveto ldef
/slw /setlinewidth ldef
/srgb /setrgbcolor ldef
/st /stroke ldef
/xdef {exch def} bdef
/F {findfont exch scalefont setfont} bdef

/scpshow
 {/fs findscscale def
  currentfont[.9 0 0 fs 0 0]makefont
    setfont
    true charpath
  currentfont[1 .9 div 0 0 1 fs div 0 0]makefont setfont
 }def

 /findscscale
   {gsave
      newpath
       0 0 moveto
       (X) true charpath
      flattenpath
      pathbbox/capheight exch def pop pop pop
      newpath
       0 0 moveto
       (x) true charpath
      flattenpath
      pathbbox/xheight exch def pop pop pop
    grestore
     xheight capheight xheight sub 3 div add
      capheight div
 }def

/CIRC  { %def  (stack = rgb)
  gs srgb cp radius 0 360 arc closepath fill gr
} bdef
/Axis {gs alen 0 rlt 3 slw 0 0 0 srgb stroke gr} bdef
/SHIFT {.9 2 radius mul mul 0 rmt} bdef
/Grid {%def
  gs 1 slw 90 r
    1 1 3 {%for
      -120 r gs incr incr 1 {%for
        SHIFT gs 30 r 0 glen rlt st gr
        gs 150 r 0 glen rlt st gr} for gr
      } for 
  gr} bdef

/Rainbow {%def
  /rwidth xdef /rheight xdef
  /lincr 1 rwidth 6 div div def
  gs 1.1 setlinewidth
  0 lincr 1 {/c1 xdef 1 c1 0 srgb gs 0 rheight rlt st gr 1 0 rmt} bfor
  1 lincr neg 0 {/c1 xdef c1 1 0 srgb gs 0 rheight rlt st gr 1 0 rmt} bfor
  0 lincr 1 {/c1 xdef 0 1 c1 srgb gs 0 rheight rlt st gr 1 0 rmt} bfor
  1 lincr neg 0 {/c1 xdef 0 c1 1 srgb gs 0 rheight rlt st gr 1 0 rmt} bfor
  0 lincr 1 {/c1 xdef c1 0 1 srgb gs 0 rheight rlt st gr 1 0 rmt} bfor
  1 lincr neg 0 {/c1 xdef 1 0 c1 srgb gs 0 rheight rlt st gr 1 0 rmt} bfor
gr} bdef
%%EndProlog
%%BeginSetup
/radius .4 inch def
/alen 9 radius mul def
/glen 8 .9 radius mul mul def
/incr .25 def
%%EndSetup

% Print an RGB cube
% Red (X-axis) is to the right
% Green (Y-axis) is to the left
% Blue (Z-axis) is up

gs 4.25 inch 5.5 inch translate 0 0 m

% Print Black circle at (0,0,0)
0 0 0 CIRC

% Print the Blue axis
gs 90 r gs
incr incr 1  { %for
  /col1 xdef SHIFT 0 0 col1 CIRC 
} for gr Axis gr

% Print the Red axis
gs -30 r gs
incr incr 1  { %for
  /col1 xdef SHIFT col1 0 0 CIRC 

  % Print the Red/Blue plane
  gs 120 r
  incr incr 1  { %for
    /col2 xdef SHIFT col1 0 col2 CIRC
  } for gr
} for gr Axis gr

% Print the Green axis
gs -150 r gs
incr incr 1  { %for
  /col1 xdef SHIFT 0 col1 0 CIRC 

  % Print the Green/Red plane
  gs 120 r
  incr incr 1  { %for
    /col2 xdef SHIFT col2 col1 0 CIRC
  } for gr
} for gr Axis gr

% Print the Blue/Green plane
gs 90 r
incr incr 1  { %for
  /col1 xdef SHIFT
  gs 120 r
  incr incr 1  { %for
    /col2 xdef SHIFT 0 col2 col1 CIRC
  } for gr
} for gr

0 0 0 srgb
Grid
gr

%Print Text
32 /Times-Roman F
1.25 inch 9.5 inch m cp (S) pshow (CRIPT) scpshow (S) pshow (ER) scpshow
  -2 0 rmt (VER) scpshow
  gs 9 /Symbol F -2 14 rmt (\324) pshow clip newpath m .5 inch 3 inch Rainbow
  gr 2 0 rmt
  ( Printing System) show

24 /Times-Roman F
1.94 inch 1.5 inch m (GrayMatter Software Corporation) show
  gs 8 /Symbol F 0 .12 inch rmt (\324) show gr

showpage
